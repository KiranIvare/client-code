<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background12"
    tools:context="com.qubitons.clientcode.MainActivity">

    <ImageView
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:src="@drawable/logo1"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/client_code"
        android:layout_marginTop="80dp"
        android:background="#30ffffff"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_numbers_24"
        android:drawablePadding="20dp"
        android:hint="client_code"
        android:textColor="@color/black"
        android:textColorHint="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitbtn"
        android:layout_below="@id/client_code"
        android:layout_centerHorizontal="true"
        android:layout_margin="100dp"
        android:backgroundTint="@color/design_default_color_on_secondary"
        android:text="SUBMIT" />


</RelativeLayout>


